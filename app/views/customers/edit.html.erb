<h1> Edit your profile</h1>

<%= form_for(@customer, url: customer_path(@customer), action: "put") do |f| %>

<fieldset>
  <%= f.label :fname %>
  <%= f.text_field :fname %>
</fieldset>
<fieldset>
  <%= f.label :lname %>
  <%= f.text_field :lname %>
</fieldset>
<fieldset>
  <%= f.label :username %>
  <%= f.text_field :username %>
</fieldset>
<fieldset>
  <%= f.label :image %>
  <%= f.file_field :image %>
</fieldset>
<fieldset>
  <%= f.label :bio %>
  <%= f.text_area :bio %>
</fieldset>
<%= fields_for :religion do |builder| %>
  <fieldset>
    <%= f.label :religion %>
    <%= f.collection_select(:religion_id, Religion.all, :id, :name) %> 
  </fieldset>
<% end %>
<fieldset>
  <%= f.submit "Update" %>
</fieldset>
<% end %>