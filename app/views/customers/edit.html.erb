<h1> Edit your profile</h1>

<%= form_for(@customer, url: customer_path(@customer), action: "put") do |f| %>

<fieldset>
  <%= f.label :fname %>
  <%= f.text_field :fname %>
</fieldset>
<fieldset>
  <%= f.label :lname %>
  <%= f.text_field :lname %>
</fieldset>
<fieldset>
  <%= f.label :username %>
  <%= f.text_field :username %>
</fieldset>
<fieldset>
  <%= f.label :bio %>
  <%= f.text_area :bio %>
</fieldset>
<fieldset>
  <%= f.label :industry %>
  <%= f.collection_select :industry_id, Industry.all, :id, :name %>
</fieldset>
<fieldset>
  <%= f.submit "Update" %>
</fieldset>
<% end %>